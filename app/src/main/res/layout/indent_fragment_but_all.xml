<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
      android:orientation="vertical"
    >
      <LinearLayout
        android:id="@+id/user_xinxidizhi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_indent_tabLayout">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/order_002"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/commodity_titleL"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/activity_indent_all_userInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="用户信息"/>
            <TextView
                android:id="@+id/activity_indent_all_site"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="用户地址"/>
        </LinearLayout>
        <ImageView
           android:id="@+id/activity_indent_all_right_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/more"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000"
        />
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/activity_indent_all_recycle"
            ></android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#eeeeee"
        >

        <TextView
            android:id="@+id/activity_indent_all_commodity_car_btn"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:textColor="#ff3300"
            android:text="实付款:"
            android:textSize="20dp" />

        <Button
            android:id="@+id/activity_indent_all_queding_paid"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#ff3300"
            android:text="确认支付"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>
