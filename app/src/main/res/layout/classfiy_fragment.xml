<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#f00"
        android:orientation="horizontal"
        >
        <ImageButton
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="@drawable/a_s"
            android:layout_gravity="center"
            android:id="@+id/classify_fragment_imageBtn"
            android:layout_weight="1"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="#fff"
            android:layout_margin="15dp"
            android:hint="请输入内容"
            android:id="@+id/classify_fragment_editText"
            android:drawableLeft="@drawable/search_icon2"
            android:layout_weight="7"
            />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:background="@drawable/a9x"
            android:id="@+id/classify_fragment_imageBtnOne"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <ListView
            android:background="#fff"
            android:id="@+id/classfiy_fragment_listView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.25"></ListView>
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="4"
           android:orientation="vertical"
           >
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="110dp"
               android:background="@drawable/timg"
               />
           <FrameLayout
               android:id="@+id/classfiy_fragment_frameLayout"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               ></FrameLayout>
       </LinearLayout>

    </LinearLayout>
</LinearLayout>
