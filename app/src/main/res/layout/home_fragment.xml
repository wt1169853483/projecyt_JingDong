<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#f00"
        android:orientation="horizontal"
        >
        <ImageButton
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="@drawable/a_s"
            android:layout_gravity="center"
            android:id="@+id/home_fragment_imageBtn"
            android:layout_weight="1"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="#fff"
            android:layout_margin="15dp"
            android:hint="请输入内容"
            android:id="@+id/home_fragment_sousuo_editText"
            android:drawableLeft="@drawable/search_icon2"
            android:layout_weight="7"
            />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:background="@drawable/a9x"
            android:id="@+id/home_fragment_imageBtnOne"
            android:layout_weight="1"
            />
    </LinearLayout>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/home_fragment_refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
    <com.youth.banner.Banner
        android:id="@+id/home_fragment_beanner"
        android:layout_width="match_parent"
        android:layout_height="180dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        android:background="#fff"
        >
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/home_fragment_recycle_catagory"
            ></android.support.v7.widget.RecyclerView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/laba"
            />

        <com.sunfusheng.marqueeview.MarqueeView
            android:id="@+id/home_fragment_marqueeView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:mvAnimDuration="1000"
            app:mvDirection="bottom_to_top"
            app:mvInterval="3000"
            app:mvTextColor="@color/colorAccent"
            app:mvTextSize="14sp"
            app:mvSingleLine="true"
            android:background="#fff"
            android:layout_marginRight="5dp"
            >
        </com.sunfusheng.marqueeview.MarqueeView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background="#fff"
        >
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/home_fragment_recycle_miaosha"
            ></android.support.v7.widget.RecyclerView>
    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#b8b8b6"
                        android:text="-------为你推荐-------"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:gravity="center"
                        />
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/home_fragment_recycle_tuijian"
                        ></android.support.v7.widget.RecyclerView>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>
