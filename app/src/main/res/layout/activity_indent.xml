<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.indent.view.activity.IndentActivity"
    >
    <LinearLayout
        android:id="@+id/commodity_titleL"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <ImageView
            android:id="@+id/activity_indent_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="展示订单"
            android:gravity="center"
            android:textSize="22dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/commodity_titleL"
        android:orientation="horizontal"
        android:id="@+id/activity_indent_lin"
        android:gravity="center"
        >
    <android.support.design.widget.TabLayout
        android:background="#fff"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/activity_indent_tabLayout"
        ></android.support.design.widget.TabLayout>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:layout_below="@+id/activity_indent_lin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_indent_viewPager"
        ></android.support.v4.view.ViewPager>

</RelativeLayout>